{
  "name": "Summarizer",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "TL;DR, this extension gives you a TL;DR!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/js/showPageAction.js"],
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/popup.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "*://*/*",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "src/css/inject.css"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "src/css/inject.css"
      ],
      "js": [
        "src/js/contentScript.js"
      ]
    }
  ]
}

{
  "name": "jent.ly",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "The Jent.ly Summarizer seamlessly provides a highlighted summary of your web content to save your time and attention.",
  "icons": {
    "16": "icons/jent-icon-128.png",
    "48": "icons/jent-icon-128.png",
    "128": "icons/jent-icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "bg/performHighlighting.html",
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/jent-icon-128.png",
    "default_title": "page action demo",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://*/*",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs",
    "identity",
    "identity.email"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "css/inject.css"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "css/inject.css"
      ],
      "js": [
        "js/contentScript.js"
      ]
    }
  ]
}

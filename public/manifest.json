{
  "name": "jent.ly",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension provides a TL;DR and highlights important text in any website of your choice!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/showPageAction.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "permissions": [
    "https://*/*",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "css/inject.css"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "css/inject.css"
      ],
      "js": [
        "js/contentScript.js"
      ]
    }
  ]
}
